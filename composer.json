{
    "name": "cion/laravel-cloudflare",
    "description": "This Laravel package allows you to easily interact with Cloudflare to accomplish common tasks, such as purging the cache.",
    "keywords": [
        "laravel",
        "cloudflare",
        "api",
        "artisan",
        "cache"
    ],
    "homepage": "https://github.com/cion/laravel-cloudflare",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Breuer",
            "email": "chris@cion.agency"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "guzzlehttp/guzzle": "^6.0",
        "illuminate/console": "^8.83",
        "illuminate/support": "^8.83"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^6.24",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Cion\\LaravelCloudflare\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cion\\LaravelCloudflare\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": "Cion\\LaravelCloudflare\\ServiceProvider"
        }
    }
}
